{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "paths": {
            "@root/*": [
                "./*"
            ],
            "@Ultils/*": [
                "./Ultis"
            ],
            "@Config/*": [
                "./Config"
            ],

        }
    },
    "include": [
        "./**/*.ts",
        "./Utils",
        "./Config"
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
}